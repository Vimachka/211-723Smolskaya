#include <stdio.h> // для осуществления ввода и вывода на экран
#include <math.h> // для вычесления основных математических функций

int main() {
    float x = 1, y = 1;
    float sum = 0, dif = 0, mul = 0, c = 0;
    
    printf("Введите два любых числа неравных нулю: ");
    scanf("%f%f", &x,&y);
    x = fabsf (x);
    y = fabsf (y);
    
    
    sum = x + y ;
    dif = x - y ;
    mul = x * y ;
    c =  x / y;
    
    printf("Сумма = %.2f\n", sum);
    printf ("Разность = %.2f\n", dif);
    printf("Произведение = %.2f\n", mul);
    printf("Частное модулей = %.2f\n", c);
    
    return 0;
    
}
